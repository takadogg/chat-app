<div class="chat-header">
  <div class="chat-name">函館旅行計画</div>
  <div class="chat-end-btn">
    <a link="#">チャットを終了する</a>
  </div>
</div>

<div class="chat-page">
  <div class="chat-message">
    <div class="about-message">
      <div class="sender">Tom</div>
      <div class="date">2020/3/31(Wed) 12:43:30</div>
    </div>
    <div class="text">おはよう</div>
  </div>
  <div class="chat-message">
    <div class="about-message">
      <div class="sender">james</div>
      <div class="date">2020/3/31(Wed) 12:43:32</div>
    </div>
    <div class="text">うん、おはよう。</div>
  </div>
</div>

<%= form_with model: [@room, @message], html: {class: "form"}, local: true do |f|%>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>